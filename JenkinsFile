pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven', type: 'maven'
        IS_WINDOWS = isUnix() ? 'false' : 'true'
    }

    stages {
        stage('Test') {
            steps {
                script {
                    echo "MAVEN_HOME: ${MAVEN_HOME}"
                    echo "IS_WINDOWS: ${IS_WINDOWS}"
                }
            }
        }
    }
}
